<link rel="stylesheet" href="~/css/styles-1/index.css" />
<link rel="stylesheet" href="~/css/nav-bar.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
<link rel="stylesheet" href="~/css/colores_fuentes.css"/>
@model IEnumerable<Actor>

@{
    ViewData["Title"] = "Actores";
}

<div class="card__circle card__circle1"></div>
<div class="card__circle card__circle2"></div>


    <div class="container" style="margin-bottom: 25px;">
@foreach (var actor in Model)
{
        <div class="box">
            <div class="image">
                <img src="@actor.ProfilePictureURL">
            </div>
            <div class="name_actor">@actor.FullName</div>
            <div class="bio"><p>@actor.Bio</p></div>
            <div class="btn">
                <button class="btn-details" asp-action="Details" asp-route-id="@actor.Id"><a asp-action="Details" asp-route-id="@actor.Id">Detalles</a></button>
                <button class="btn-delete" asp-action="Delete" asp-route-id="@actor.Id"><a asp-action="Delete" asp-route-id="@actor.Id">Eliminar</a></button>
            </div>
        </div>
}
    </div>

<div class="text-white" style="position: fixed; right: 25px; bottom: 25px">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle" style="border-radius: 50%;"> Nuevo</i></a>
</div>
