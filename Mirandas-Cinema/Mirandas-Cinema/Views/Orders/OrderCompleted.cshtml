<link href="~/css/page/completed.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Orden exitosa";
}
<div class="container-page row nav-links col-md-11 m-auto position-absolute">
    <div class="modali">
        <div class="top-content bg-success">
            <div class="left-text">
                Exito
            </div>
            <a class="close-icon text-white" asp-controller="Movies" asp-action="Index"><i class="fas fa-times"></i></a>
            <div class="icon fas fa-check"></div>
        </div>
        <div class="bottom-content">
            <div class="text">
                Tu orden se ha realizado con exito
            </div>
            <p>
                Puedes consultar todos tus pedidos en la sección de ordenes de tu perfil.
            </p>
            <div class="close-btn">
                <a class="text-white" asp-controller="Movies" asp-action="Index">Cerrar</a>
            </div>
        </div>
    </div>
</div>
