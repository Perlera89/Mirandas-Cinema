<link rel="stylesheet" href="~/css/page/CreateCinema.css" />
<link rel="stylesheet" href="~/css/root/nav-bar.css" />
@model Producer

@{
    ViewData["Title"] = "Crear Productor";
}

<div class="justify-content-center" style="position:relative">
    <div class="content">
        <div class="image-box">
            <div class="form-group text-center">
                <img id="PicturePreview" class="border-info rounded-circle " style="max-width:200px" />
            </div>

        </div>
        <form asp-action="Create">
            <a class="=btn btn-secondary" asp-action="Index" style="position:absolute; bottom:80px; left: 30px; ">Regresar</a>
            <div class="card">
                <div class="form align-items-center">
                    <h1>Registro Productores</h1>
                    <div class="grupo">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="ProfilePictureURL" type="text" required><span class="barra"></span>
                        <label asp-for="ProfilePictureURL"></label>
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="grupo">
                        <input asp-for="FullName" type="text" id="name" required><span class="barra"></span>
                        <label for="" asp-for="FullName"></label>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="grupo">
                        <input asp-for="Bio" type="text" id="name" required><span class="barra"></span>
                        <label for="" asp-for="Bio"></label>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div>
                        <button type="submit">Agregar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var img = document.getElementById('PicturePreview');
            img.src = $("#ProfilePictureURL").val();
        })

        $("#ProfilePictureURL").on("change", function () {
            var img = document.getElementById('PicturePreview');
            img.src = $(this).val();
        })
    </script>

}