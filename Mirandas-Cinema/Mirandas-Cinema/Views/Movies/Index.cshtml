@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Movies";
}

<div class="row">
    @foreach (var movie in Model) 
     {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-primary">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @movie.Name
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <img src="@movie.ImagenURL" alt="@movie.Name" width="100%"/>
                </div>
                <div class="col-md-12 float-left">
                    <div class="card-body">
                        <p class="card-text">@movie.Description</p>
                        <p class="card-text"><b>Cine:</b> @movie.Cinema.Name</p>
                        <p class="card-text"><b>Categoria:</b> @movie.MovieCategory</p>
                        <p class="card-text"><b>Fecha de inicio:</b> @movie.StartDate.ToString("dd MMMM yy")</p>
                        <p class="card-text"><b>Fecha de finalizacion:</b> @movie.EndDate.ToString("dd MMMM yy")</p>
                        <p class="card-text">
                            <b>Estado: </b>
                            @if (DateTime.Now >= movie.StartDate && DateTime.Now <= movie.EndDate)
                            {
                                <span class="badge bg-success text-white">Disponible</span>
                            }
                            else if (DateTime.Now > movie.EndDate)
                            {
                                <span class="badge bg-danger text-white">Expirada</span>
                            } else 
                            { 
                                <span class="badge bg-primary text-white">Muy pronto</span>
                            }
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-primary text-white float-right"><i class="bi bi-eye-fill"></i> Detalles</a>
                            <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i> Agregar (@movie.Price.ToString("c"))</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
     }
</div>