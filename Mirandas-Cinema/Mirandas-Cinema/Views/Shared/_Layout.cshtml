<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mirandas-Cinema</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/root/nav-bar.css" />
    <link rel="stylesheet" href="~/css/root/general.css"/>
    <link href="~/css/root/fonts.css" rel="stylesheet" />
    <link href="~/css/root/general.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    <link rel="shortcut icon" href="~/icono.ico" width="32px">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <style type="text/css">
        body {
            background-image: radial-gradient(circle at 50% -20.71%, #a4d8ec 0, #a7d7ef 6.25%, #abd6f1 12.5%, #b0d5f3 18.75%, #b5d3f4 25%, #bbd2f4 31.25%, #c1d0f4 37.5%, #c7cff3 43.75%, #cdcdf2 50%, #d3cbf0 56.25%, #d9caed 62.5%, #dec8ea 68.75%, #e3c7e7 75%, #e8c6e3 81.25%, #ecc5df 87.5%, #efc4da 93.75%, #f2c4d6 100%);
        }
    </style>
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 nav-links justify-content-center col-md-11" style="margin: auto;">
            <div class="container-fluid">
                <a class="navbar-brand nav-links" asp-area="" asp-controller="Movies" asp-action="Index"><img src="~/resources/logos/2.png" width="100" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="position: relative;">
                    <ul class="navbar-nav flex-grow-1 nav-links">
                        <li class="nav-item forward">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="Index"><i class="bi-film"></i> Inicio</a>
                        </li>

                        <li class="nav-item dropdown forward">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="false" aria-expanded="false">
                                <i class="bi bi-gear"></i> Administrar
                            </a>

                            <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="padding: 10px;">
                                <a class="dropdown-item" asp-controller="Actors" asp-action="Index"><i class="bi bi-headset"></i> Actores</a>
                                <a class="dropdown-item" asp-controller="Cinemas" asp-action="Index"><i class="bi bi-camera-reels"></i> Cines</a>
                                <a class="dropdown-item" asp-controller="Producers" asp-action="Index"><i class="bi bi-person-square"></i> Productores</a>
                            </div>
                        </li>
                        <li class="nav-item forward">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producers" asp-action="prueba"><i class="bi bi-person-workspace"></i> Prueba</a>
                        </li>
                    </ul>
                    <div class="search">
                        <input class="input-search" type="text" placeholder="Buscar pelicula" />
                        <div class="btn-search">
                            <i class="bi bi-search"></i>
                        </div>
                    </div>
                    @*Perfil de usuario*@

                </div>
                <div class="nav-bar">
                    @await Component.InvokeAsync("ShoppingSummary")
                </div>
                <div class="dropdown">
                    <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-badge"></i> Usuario
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="profile-btn">
                        <li>
                            <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                <i class="bi bi-list"></i> Ordenes
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer text-muted">
        <div class="container nav-links nav-footer col-md-11" style="display: flex; justify-content: center;">
            &copy; 2021 - Mirandas Cinema
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
