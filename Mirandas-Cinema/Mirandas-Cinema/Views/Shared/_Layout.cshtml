<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mirandas-Cinema</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    <link rel="shortcut icon" href="~/icono.ico" width="32px">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/css/root/nav-bar-1.css" />
    <link rel="stylesheet" href="~/css/root/nav-bar_queries-2.css" />
    <link href="~/css/root/general.css" rel="stylesheet" />
    <link href="~/css/root/fonts.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/footer/footer.css" />
    <link rel="stylesheet" href="~/css/footer/footer_mediaQueries.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 nav-links justify-content-center col-md-12">
            <div class="container-fluid">
                <!--Logo-->
                <a class="navbar-brand nav-links" asp-area="" asp-controller="Movies" asp-action="Index"><img src="~/resources/logos/2.png" width="100" /></a>

                <!--boton para pantallas pequeñas-->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="position: relative;">
                    <ul class="navbar-nav flex-grow-1 nav-links subtitle querie_column" style="position: relative;">

                        <li class="nav-item forward">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="Index"><i class="bi bi-house-door"></i> Inicio</a>
                        </li>

                        <li class="nav-item dropdown forward">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="false" aria-expanded="false">
                                <i class="bi bi-film"></i> Categorias
                            </a>

                            <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="padding: 10px;">
                                <i class="bi bi-tag mr-1"></i>@Html.ActionLink("Accion", "Categorias", "Movies", new { categoria = "1" })<br />
                                <i class="bi bi-tag mr-1"></i>@Html.ActionLink("Comedia", "Categorias", "Movies", new { categoria = "2" })<br />
                                <i class="bi bi-tag mr-1"></i>@Html.ActionLink("Romance", "Categorias", "Movies", new { categoria = "3" })<br />
                                <i class="bi bi-tag mr-1"></i>@Html.ActionLink("Terror", "Categorias", "Movies", new { categoria = "4" })<br />
                                <i class="bi bi-tag mr-1"></i>@Html.ActionLink("Animacion", "Categorias", "Movies", new { categoria = "5" })<br />
                            </div>
                        </li>
                        

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown forward">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                                   aria-haspopup="false" aria-expanded="false">
                                    <i class="bi bi-gear"></i> Administrar
                                </a>

                                <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="padding: 10px;">
                                    <a class="dropdown-item" asp-controller="Actors" asp-action="Index"><i class="bi bi-headset"></i> Actores</a>
                                    <a class="dropdown-item" asp-controller="Cinemas" asp-action="Index"><i class="bi bi-camera-reels"></i> Cines</a>
                                    <a class="dropdown-item" asp-controller="Producers" asp-action="Index"><i class="bi bi-person-square"></i> Productores</a>
                                </div>
                            </li>
                        }
                        <form class="form-inline my-2 my-lg-0 navbar_form" asp-controller="Movies" asp-action="Filter">
                            <input name="searchMovie" type="text" class="form-control" placeholder="Buscar pelicula..." aria-label="Recipient's username" aria-describedby="button-addon2">&nbsp;
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" style="max-width: 42px; border-radius: 25%;"><i class="bi bi-search"></i></button>
                        </form>
                    </ul>
                </div>
                &nbsp;
                @* Carrito *@
                <div class="nav-item forward">
                    @await Component.InvokeAsync("ShoppingSummary")
                </div>

                <partial name="_Identity.cshtml" />
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-0" style=" margin-bottom: 13em !important;">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted nav-links col-sm-12 nav-footer container justify-content-center contenedor_principal_footer" style="position:absolute;">
        <div class="contenedor_footer">
            <div class="contenedor_nombre_empresa">
                <label class="footer_nombre_empresa">MIRANDA'S<br /> CINEMA</label>
                <a asp-action="Index" asp-controller="Movies">
                    <img src="~/resources/logos/1.png" width="92" />
                </a>
            </div>
            <div class="footer_caja contenedor_footer_info">
                <ul class="footer_info">
                    <li><label class="subtitle">Contáctanos:</label></li>
                    <li> <label class="text-center">Teléfono: 7738 - 8082</label></li>
                    <li><label><a class="text-muted text-center" href="mailto:cinemas@miranda.com">Email: cinemas@mirandas.com</a></label></li>
                </ul>
            </div>

            <div class="footer_caja footer_redes">
                <label class="subtitle">Siguenos en:</label>
                <a href="#">
                    <img src="~/resources/redes/facebook.gif" width="36" />
                </a>
                <a href="#">
                    <img src="~/resources/redes/twitter.gif" width="36" />
                </a>
            </div>
        </div>
        <div style="border:1px solid gainsboro;width:100%;margin-bottom:0.5em;"></div>
        <div class="footer_legal_info">
            <p class="text-center">&copy; 2021 - Mirandas Cinema   </p>
            <a class="text-muted text-center text-decoration-none" href="https://www.privacypolicies.com/live/2a17def5-a250-42b9-b04d-9300683620a3">
                Condiciones de servicio
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--Carousel-->
    <script src="~/js/jsMovies/js_movies_carousel.js" crossorigin="anonymous"></script>
    <script src="~/js/jsMovies/js_movies_carousel2.js" crossorigin="anonymous"></script>
    <script src="~/js/jsMovies/js_movies_caroucel_3.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
