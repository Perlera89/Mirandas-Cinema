<link rel="stylesheet" href="~/css/page/UpdateCinema.css" />
<link rel="stylesheet" href="~/css/root/nav-bar.css" />
@model Cinema

@{
    ViewData["Title"] = "Actualizar Cinema";
}

<div class="justify-content-center" style="position: relative;">
    <div class="content">
        <div class="image-box">
            <div class="form-group text-center">
                <img id="PicturePreview" class="border-info rounded-circle" style="max-width:200px" />
            </div>

        </div>
        <form asp-action="Update">
            <div class="card">
                <div class="form align-items-center">
                    <h1>Registro de Cinema</h1>
                    <div class="grupo">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Logo" type="text" required><span class="barra"></span>
                        <label asp-for="Logo"></label>

                    </div>
                    <div class="grupo">
                        <input asp-for="Name" type="text" required><span class="barra"></span>
                        <label for="" asp-for="Name"></label>

                    </div>
                    <div class="grupo">
                        <textarea class="form-control" asp-for="Description" type="text" required style="max-height:200px; height: 100px; min-height:200px;"><span class="barra"></span>></textarea>
                        <label for="" asp-for="Description"></label>
                    </div>
                    <a class="btn btn-secondary" asp-action="Index" style="position: absolute; bottom: 20px; left: 20px;">Regresar</a>
                    <div>
                        <input style="position:absolute; bottom:20px; right:20px" class="btn btn-success" id="btnActualizar" type="submit" value="Actualizar">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            var img = document.getElementById('PicturePreview');
            img.src = $("#Logo").val();
        })

        $("#Logo").on("change", function () {
            var img = document.getElementById('PicturePreview');
            img.src = $(this).val();
        })
    </script>

}