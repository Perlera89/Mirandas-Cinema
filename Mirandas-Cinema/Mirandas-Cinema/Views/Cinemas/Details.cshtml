@model Cinema

@{
    ViewData["Title"] = "Detalles Actor";
}
<div class="row nav-links" style="margin: 0 auto 55px; width: 1140px;">
    <div style="margin: 1rem auto; padding: 50px; border: 3px dashed #e1e1e1; border-radius: 15px;" class="col-md-8 offset-0 ">
        <p>
            <h2 class="nav-links col-md-12 offset-0 justify-content-center">Detalles de @Model.Name</h2>
        </p>
        <div>
            <div class="col-md-12 offset-0">
                <div class="form-group text-center">
                    <img id="PicturePreview" class="border-info rounded-circle" style="max-width:150px" />
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" readonly style="max-height: 200px; height: 100px; min-height: 100px;"></textarea>
                </div>

                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <div class="form-group">
                        <a class="btn btn-success float-right" asp-action="Update" asp-route-id="@Model.Id">Actualizar</a>
                    </div>
                }
                <div class="form-group">

                    <a class="btn btn-secondary" asp-action="Index">Mostrar todos</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            var img = document.getElementById('PicturePreview');
            img.src = $("#ProfilePictureURL").val();
        })
    </script>

}