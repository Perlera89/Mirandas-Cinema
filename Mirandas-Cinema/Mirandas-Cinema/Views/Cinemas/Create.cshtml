<link rel="stylesheet" href="~/css/page/CreateCinema.css"/>
<link  rel="stylesheet" href="~/css/root/nav-bar.css"/>

@model Cinema

<div class="container-form" style="position:relative">
    <div class="content">
        <div class="image-box">
            <div class="form-group text-center">
                <img id="PicturePreview" class="border-info rounded-circle " style="max-width:200px" />
            </div>

        </div>
        <form asp-action="Create">
            <a class="=btn btn-secondary" asp-action="Index" style="position:absolute; bottom:80px; left: 30px; ">Regresar</a>
            <div class="card">
                <div class="form align-items-center">
                    <h1>Registro de Cinema</h1>
                    <div class="grupo">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Logo" type="text" required><span class="barra"></span>
                        <label asp-for="Logo"></label>
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="grupo">
                        <input asp-for="Name" type="text" id="name" required><span class="barra"></span>
                        <label for="" asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="grupo">
                        <input asp-for="Description" type="text" id="name" required><span class="barra"></span>
                        <label for="" asp-for="Description"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div>
                        <button type="submit">Agregar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var img = document.getElementById('PicturePreview');
            img.src = $("#Logo").val();
        })

        $("#Logo").on("change", function () {
            var img = document.getElementById('PicturePreview');
            img.src = $(this).val();
        })
    </script>

}