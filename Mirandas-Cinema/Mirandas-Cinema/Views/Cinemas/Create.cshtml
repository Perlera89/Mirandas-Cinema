<link rel="stylesheet" href="~/css/page/create.css"/>
<link  rel="stylesheet" href="~/css/root/nav-bar.css"/>
@model Cinema

<div class="container-form" style="position:relative">
    <div class="content">
        <div class="image-box">
            <div class="form-group text-center">
                <img id="PicturePreview" class="border-info rounded-circle " style="max-width:200px" />
            </div>

        </div>
        <form asp-action="Create">
            <a class="=btn btn-secondary" asp-action="Index" style="position:absolute; bottom:20px; left: 20px;">Regresar</a>
            <div class="topic">Agregar Cinema</div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-box">
                <label asp-for="Logo"></label>
                <input asp-for="Logo" type="text" placeholder="Foto del cinema" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" placeholder="Nombre del cinema" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Description"></label>
                <input asp-for="Description" type="text" placeholder="Descripcion del cinema" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input type="submit" value="Agregar" />
            </div>
        </form>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var img = document.getElementById('PicturePreview');
            img.src = $("#Logo").val();
        })

        $("#Logo").on("change", function () {
            var img = document.getElementById('PicturePreview');
            img.src = $(this).val();
        })
    </script>

}